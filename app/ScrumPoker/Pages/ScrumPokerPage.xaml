<?xml version="1.0" encoding="utf-8"?>
<ContentPage Title="Sessions" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ScrumPoker.Pages" x:Class="ScrumPoker.Pages.ScrumPokerPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_add" Command="{Binding NewSessionCommand}" />
    </ContentPage.ToolbarItems>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SearchBar Grid.Row="0" FontSize="Small" />
        <ListView Grid.Row="1" ItemsSource="{Binding Sessions}" SelectedItem="{Binding SelectedSession, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding MemberCount, StringFormat='{0} member(s)'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>