<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="New session" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ScrumPoker.Pages.NewSessionPage">
	<TableView Intent="Form">
        <TableView.Root>
            <TableSection>
                <EntryCell Label="Name" Text="{Binding NewSession.Name, Mode=TwoWay}" />
                <EntryCell Label="Cards" Text="{Binding NewSession.Cards, Mode=TwoWay}" />
                <SwitchCell Text="Is private?" On="{Binding NewSession.IsPrivate, Mode=TwoWay}" />
                <EntryCell Label="Pincode" Text="{Binding NewSession.Pincode, Mode=TwoWay}" />
            </TableSection>
            <TableSection>
                <ViewCell>
                    <Button Text="Create" Command="{Binding CreateSessionCommand}" />
                </ViewCell>
            </TableSection>
        </TableView.Root>
    </TableView>
</ContentPage>